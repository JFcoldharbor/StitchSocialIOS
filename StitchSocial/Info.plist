<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleGetInfoString</key>
    <string></string>
    <key>CFBundleIconName</key>
    <string>AppIcon</string>
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>coldharbor.StitchSocial</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>stitchsocial</string>
            </array>
        </dict>
    </array>
    <key>FirebaseAppDelegateProxyEnabled</key>
    <true/>
    <key>FirebaseMessagingAutoInitEnabled</key>
    <true/>
    <key>LSMinimumSystemVersion</key>
    <string>15.0</string>
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>firebaseapp.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
            <key>googleapis.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
            <key>fcm.googleapis.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
        </dict>
    </dict>
    <key>NSUserNotificationsUsageDescription</key>
    <string>Stitch Social sends notifications for new content, hypes, and community interactions.</string>
    <key>NSCameraUsageDescription</key>
    <string>Stitch Social needs camera access to record videos for your posts.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>Stitch Social needs microphone access to record audio with your videos.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Stitch Social needs photo library access to save and share your videos.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Stitch Social needs permission to add media to your photo library.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Stitch Social uses your location to tag posts and discover nearby content.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>Stitch Social uses your location to enhance content discovery even when the app is in the background.</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Stitch Social uses speech recognition to transcribe audio for accessibility and search.</string>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>
</dict>
</plist>
